<%- include('../components/headComp') %>

<body class="font-app login-bg">

   <div class="d-flex justify-content-center animate__animated animate__zoomIn">
      <div class="card" style="width: 30rem; height: 28,5rem; margin: 10rem 10px;">
         <div class="card-body">
           <h1 class="card-title text-center">Register</h1>
            
               <form class="mt-4 mx-3" action="/register-user" method="post">
               <div class="mb-3">
                  <label class="form-label">Nama</label>
                  <input type="text" name="fullName" value="<%= fullName %>" class="form-control" placeholder="Nama" autocomplete="off">
                  <% if(messages.failname) { %>
                     <div class="form-text text-danger"><%- messages.failname %></div>
                  <% } %> 
               </div>
               <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input type="email" name="email" value="<%= email %>" class="form-control" placeholder="example@example.com" autocomplete="off">
                  <% if(messages.failemail) { %>
                     <div class="form-text text-danger"><%- messages.failemail %></div>
                  <% } %>
               </div>
               <div class="mb-3">
                  <label class="form-label">Password</label>
                  <input type="text" name="password" class="form-control" placeholder="Password" autocomplete="off">
                  <% if(messages.failpass) { %>
                     <div class="form-text text-danger"><%- messages.failpass %></div>
                  <% } %>
                  <% if(messages.notmatchpass) { %>
                     <div class="form-text text-danger"><%- messages.notmatchpass %></div>
                  <% } %>
               </div>
               <div class="mb-3">
                  <label class="form-label">Confirm Password</label>
                  <input type="text" name="newPassword" class="form-control" placeholder="Confirm Password" autocomplete="off">
                  <% if(messages.failnewpass) { %>
                     <div class="form-text text-danger"><%- messages.failnewpass %></div>
                  <% } %>
                  <% if(messages.notmatchpass) { %>
                     <div class="form-text text-danger"><%- messages.notmatchpass %></div>
                  <% } %>
               </div>
               <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus"></i>&nbsp; Register</button>
            </form>

            <h6 class="mt-5 text-center">Already Have Account ? <a href="/login">Login</a></h6>
            <h6 class="text-center"><a href="/">Home</a></h6>
         </div>
       </div>
   </div>

</body>
</html>